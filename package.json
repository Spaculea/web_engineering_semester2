{
    "name": "dhbw-klausuren-archiv",
    "version": "1.0.0",
    "description": "Ein Archiv f√ºr alte Klausuren der DHBW Stuttgart",
    "main": "src/server.js",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "db:start": "docker compose up -d postgres",
        "db:stop": "docker compose down",
        "db:reset": "docker compose down -v && docker compose up -d postgres && node src/db/initialization.js",
        "db:init": "node src/db/initialization.js",
        "docs": "jsdoc -c jsdoc.json",
        "docs:watch": "jsdoc -c jsdoc.json --watch",
        "docs:serve": "npm run docs && cd docs && python -m http.server 8080",
        "generate-admin": "node generate-admin.js"
    },
    "dependencies": {
        "@nestjs/common": "^11.1.3",
        "@nestjs/typeorm": "^11.0.0",
        "bcrypt": "^5.1.1",
        "dotenv": "^16.6.0",
        "express": "^4.21.2",
        "express-session": "^1.18.1",
        "multer": "^2.0.1",
        "pg": "^8.16.0",
        "typeorm": "^0.3.24"
    },
    "devDependencies": {
        "gulp-jsdoc3": "^3.0.0",
        "jsdoc": "^4.0.4",
        "jsdoc-memberof-namespace": "^2.2.0",
        "jsdoc-route-plugin": "^0.1.0",
        "mocha": "^11.7.1",
        "nodemon": "^3.0.0"
    }
}